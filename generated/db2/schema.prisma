generator client_db2 {
  provider = "prisma-client-js"
  output   = "../../generated/db2"
}

datasource db2 {
  provider = "mysql"
  url      = env("DATABASE_URL_DB2")
}

model user {
  U_id          Int     @id @default(autoincrement())
  U_name        String?
  U_email       String?
  U_tel         String?
  U_job         String?
  U_branch      String?
  U_van         Int?
  U_projectday  Int?
  U_checkin     Int?
  U_meetingroom Int?
}

